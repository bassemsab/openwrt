do_sysinfo_ramips() {
	local machine
	local name

	machine=$(grep "^system type" /proc/cpuinfo | sed "s/system type.*: \(.*\)/\1/g")

	case "$machine" in
	*"MR200 V4")
        name="mr200v4"
        ;;
	"MR200 V4"*)
        name="mr200v4"
        ;;
	*)
		name="generic"
		;;
	esac

	[ -e "/tmp/sysinfo/" ] || mkdir -p "/tmp/sysinfo/"

	echo "$name" > /tmp/sysinfo/board_name
	echo "$machine" > /tmp/sysinfo/model
}

boot_hook_add preinit_main do_sysinfo_ramips
